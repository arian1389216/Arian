    ewe = ewe2
    bot.send_message(message.chat.id,"پیام خود را وارد کنید")
    bot.register_next_step_handler(message,send_messag_for_uer22)

def send_messag_for_uer22 (message): 
    sss(message)

def sss (message):
    global ewe
    mesage = message.text
    bot.send_message(ewe,mesage)

def dic123 (message):
    div = {
        "ا":"a", "ب":"b", "پ":"p", "ت":"t", "ث":"s", "ج":"j", "چ":"ch",
        "ح":"h", "خ":"kh", "د":"d", "ذ":"z", "ر":"r", "ز":"z", "ژ":"zh",
        "س":"s", "ش":"sh", "ص":"s", "ض":"z", "ط":"t", "ظ":"z", "ع":"a",
        "غ":"gh", "ف":"f", "ق":"gh", "ک":"k", "گ":"g", "ل":"l", "م":"m",
        "ن":"n", "و":"v", "ه":"h", "ی":"i", " " : "_"
    }
    b = ""
    a = message.text
    for i in a :
        d = div.get(i)
        b += str(d)
    bot.send_message(message.chat.id,b)

def paswor_emogi (message):
    message_text = """
        برای ارسال پیام های رمز نگاری شده پیام خود را وارد کن برایی مثال 

        سلام عزیزم دوست دارم
    """
    bot.send_message(message.chat.id,message_text)
    bot.register_next_step_handler(message,pas_sazi)

def pas_message (message):
    mes = """
        خوب پیامی که رمز نگاری شده رو بفرست ببینم 
        برای مثال 

        🚓(o′┏▽┓｀o) 🍨🥱🥒🥒🥒🥒_🤏(￣_,￣ )╮（╯＿╰）╭(>'-'<)🎞🎭⊙.☉🧑
    """
    bot.send_message(message.chat.id,mes)
    bot.register_next_step_handler(message,pas_regest)

def pas_regest (message):
    dic = {
        "ا":"🥱", "ب":"شنیه", "پ":"🧑", "ت":"🎞🎭", "ث":"🌮🥠", "ج":"( •̀ ω •́ )✧", "چ":"(❤´艸｀❤)",
        "ح":"🚗", "خ":"🤏", "د":"🙌👍", "ذ":"🎶", "ر":"😜💖", "ز":"🚃🚝", "ژ":"🛹🦽",
        "س":"🚓(o′┏▽┓｀o) ", "ش":"(>'-'<)", "ص":"sسیب", "ض":"aws", "ط":"123", "ظ":"543", "ع":"76",
        "غ":"awsed424", "ف":"شسیصث", "ق":"🏴‍☠️🏴‍☠️", "ک":"🚀🚁", "گ":"🤶", "ل":"🍨", "م":"🥒🥒🥒🥒",
        "ن":"🥩🍠", "و":"22", "ه":"1231", "ی":"⊙.☉", " ":"_"
    }
    text = message.text
    words = text.split("_")
    a = ""
    bot.send_message(message.chat.id, "صبر کنید رباط درحال خواندن پیام شماست")
    for i in words :
        for key , val in dic.items():
            if val == i :
                a += key 
                break
        a += "_"
    bot.send_message(message.chat.id, "معنی پیام شما این است:")
    bot.send_message(message.chat.id, a)

def pas_sazi (message):
    aliw = ""
    dic = {
        "ا":"🥱", "ب":"شنیه", "پ":"🧑", "ت":"🎞🎭", "ث":"🌮🥠", "ج":"( •̀ ω •́ )✧", "چ":"(❤´艸｀❤)",
        "ح":"🚗", "خ":"🤏", "د":"🙌👍", "ذ":"🎶", "ر":"😜💖", "ز":"🚃🚝", "ژ":"🛹🦽",
        "س":"🚓(o′┏▽┓｀o) ", "ش":"(>'-'<)", "ص":"sسیب", "ض":"aws", "ط":"123", "ظ":"543", "ع":"76",
        "غ":"awsed424", "ف":"شسیصث", "ق":"🏴‍☠️🏴‍☠️", "ک":"🚀🚁", "گ":"🤶", "ل":"🍨", "م":"🥒🥒🥒🥒",
        "ن":"🥩🍠", "و":"22", "ه":"1231", "ی":"⊙.☉", " " : "!!"
    }
    for i in message.text :
        aliw += dic.get(i)
        aliw += "_"
    bot.send_message(message.chat.id,aliw)

