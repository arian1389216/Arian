@bot.message_handler(commands=['settings'])
def send_settongs(message):
    key = types.ReplyKeyboardMarkup(resize_keyboard=True)
    item = types.KeyboardButton("کاربر عادی")
    item2 = types.KeyboardButton("ادمین")
    item3 = types.KeyboardButton("⬅")
    key.add(item , item2 , item3)
    bot.send_message(message.chat.id,"بزن رو یکی ",reply_markup=key)

@bot.message_handler(func=lambda message: True)
def hold_messga (message):
    global a111
    global namber
    global a212e 
    if message.text == "معنی اسمم":
        ali22222 (message)

    elif message.text == "رمز نگاری":
        key = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item = types.KeyboardButton("جواب پیام")
        item2 = types.KeyboardButton("ساخت پیام")
        item3 = types.KeyboardButton("⬅")
        key.add(item , item2 , item3)
        bot.send_message(message.chat.id,"بزن رو یکی ",reply_markup=key)

    elif message.text == "ساخت پیام":
        paswor_emogi(message)

    elif message.text == "جواب پیام":
        pas_message(message)

    elif message.text == "ترجمه ی بدوارزی":
        di (message)
    
    elif message.text == "اینگلیسی به فارسی":
        asdf (message)

    elif message.text == "فارسی به اینگلیسی":
        asd (message)

    elif message.text =="کاربر عادی":
        bot.send_message(message.chat.id,"لطفا برای ادامه روی کد زیر کلیک کنید")
        bot.send_message(message.chat.id,"----> /start <----")

    elif message.text == "ادمین":
        bot.reply_to(message, "رمز ورود را وارد کنید")
        ali(message)

    elif message.text == "ارسال یک پیام برای همه":
        al123123(message)

    elif message.text == "ایدی های ورودی":
        if "pas"== namber:  
            for i in all_user :
                a111 += 1
                a212e = all_user[a111]
