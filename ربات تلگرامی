def dsa (message):
    div = {
        "a": "ا", "b": "ب", "p": "پ", "t": "ت", "s": "س", "j": "ج", "ch": "چ",
    "h": "ح", "kh": "خ", "d": "د", "z": "ذ", "r": "ر", "z": "ز", "zh": "ژ",
    "s": "س", "sh": "ش", "s": "ص", "z": "ض", "t": "ط", "z": "ظ", "a": "ع",
    "gh": "غ", "f": "ف", "gh": "ق", "k": "ک", "g": "گ", "l": "ل", "m": "م",
    "n": "ن", "v": "و", "h": "ه", "i": "ی", " " : "_"
    }
    b = ""
    a = message.text
    for i in a :
        d = div.get(i)
        b += str(d)
    bot.send_message(message.chat.id,b)

