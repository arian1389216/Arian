def di (message):
    key = types.ReplyKeyboardMarkup(resize_keyboard=True)
    ali1 = types.KeyboardButton("اینگلیسی به فارسی")
    ali5 =  types.KeyboardButton("فارسی به اینگلیسی")
    ali4 = types.KeyboardButton("⬅")
    key.add(ali1,ali5, ali4)
    bot.send_message(message.chat.id,"بزن رو یکی ",reply_markup=key)
    

bot = telebot.TeleBot("توکن شما")

@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message,ran())
    d = -1
    if message.chat.id in all_namber:
        for i in all_namber:
            d += 1
            print (all_namber[d],"<--- ایدی کاربر و یوسر نیم کاربر --->",all_user[d])
    else:
        all_namber.append(message.chat.id)
        all_user.append(message.from_user.first_name)
    

    key = types.ReplyKeyboardMarkup(resize_keyboard=True)
    ali1 = types.KeyboardButton("چنل اهنگ")
    ali5 =  types.KeyboardButton("معنی اسمم")
    ali2 = types.KeyboardButton("چنل فیلم")
    asw = types.KeyboardButton("رمز نگاری")
    ali3 = types.KeyboardButton("چنل کلیپ   ")
    ali8 = types.KeyboardButton("ترجمه ی بدوارزی")
    ali4 = types.KeyboardButton("⬅")
    key.add(ali1, ali2, ali3,ali5, ali8,asw, ali4)
    bot.send_message(message.chat.id,"بزن رو یکی ",reply_markup=key)

@bot.message_handler(commands=['help'])
